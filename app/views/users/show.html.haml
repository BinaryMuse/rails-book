%table.profile
  %tr
    %td.main
      %h1
        = gravatar_for @user
        = @user.name
      = render 'follow_form' if signed_in?
      - if @user == current_user
        = render 'shared/micropost_form'
      - unless @user.microposts.empty?
        %table.microposts
          = render @microposts
        = will_paginate @microposts
    %td.sidebar.round
      %strong Name
      = @user.name
      %br
      %strong URL
      = link_to user_path(@user), @user
      %br
      %strong Freets
      = @user.microposts.count
      = render 'shared/stats'